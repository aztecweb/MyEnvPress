// *** COLORS ***
$main-color = #000

// content
$content-link = #00F
$content-link-active = $content-link
$content-link-hover = darken( $content-link, 30% )
$content-link-visited = lighten( $content-link, 30% )

$caption-background = lighten( $main-color, 75% )

// *** FONTS ***
$sans-serif = Helvetica Neue, Helvetica, Arial, sans-serif
$serif = TimesNewRoman, Times New Roman, Times, Baskerville, Georgia, serif
$monospace = Consolas, monaco, monospace

$body-font = $sans-serif
$heading-font = $serif

$font-size-base = 14px

$font-size-h1 = floor( $font-size-base * 2.6 )
$font-size-h2 = floor( $font-size-base * 2.15 )
$font-size-h3 = ceil( $font-size-base * 1.7 )
$font-size-h4 = ceil( $font-size-base * 1.25 )
$font-size-h5 = $font-size-base
$font-size-h6 = ceil( $font-size-base * .85 )
